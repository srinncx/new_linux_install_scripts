# Set default editor
alias snano='sudo nano'
alias smicro='sudo micro'
alias code="flatpak run com.vscodium.codium"

# Alias's to modify commands
alias cp='cp -i'
alias mv='mv -i'
alias mkdir='mkdir -p'
alias cat="batcat"
alias ls='eza -l --icons --color=always --group-directories-first'
alias lt='eza --tree --icons --color=always --group-directories-first  --level=2'
alias syu='sudo apt update; sudo apt upgrade'

# Change directory aliases
alias home='cd ~'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# SEarch command line history
alias h="history | grep "

